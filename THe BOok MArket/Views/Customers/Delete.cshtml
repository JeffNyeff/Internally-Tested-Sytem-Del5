@model THe_BOok_MArket.Models.Customer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout12.cshtml";
}

<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Delete Customer</h2>
    </div>
</header>

<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Delete Customer</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Confirm Customer deletion</h3>
                    </div>

                    <div class="card-body">


                        <dl class="dl-horizontal">
                            <dt>
                                Customer Name:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Customer_Name)
                            </dd>

                            <dt>
                                Customer Surname:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Customer_Surname)
                            </dd>

                            <dt>
                               Email Address:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Customer_Email)
                            </dd>

                            <dt>
                               Contact No.: 
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Customer_Contact)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Confirm Delete" class="btn btn-default" /> 
                               
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
