@model THe_BOok_MArket.Models.Book_Supplier

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout12.cshtml";
}

<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Delete Book Supplier</h2>
    </div>
</header>

<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Remove Book Supplier</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Confirm Book Supplier details deletion</h3>
                    </div>

                    <div class="card-body">

                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    Supplier Name
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BookSupplier_Name)
                                </dd>

                                <dt>
                                    Supplier Surname
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BookSupplier_Surname)
                                </dd>

                                <dt>
                                    Supplier Surname
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BookSupplier_Email)
                                </dd>

                                <dt>
                                    Supplier Address
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BookSupplier_Address)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Confirm Delete" class="btn btn-default" /> 
                                    @*@Html.ActionLink("Back to List", "Index")*@
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
