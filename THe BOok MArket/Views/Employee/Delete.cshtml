@model THe_BOok_MArket.Models.Employee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout12.cshtml";

}

<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Delete Employee</h2>
    </div>
</header>

<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Delete Employee</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Confirm Employee deletion</h3>
                    </div>
                    
                    <div class="card-body">
                    <div>

                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Employee_Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Employee_Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Employee_Surname)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Employee_Surname)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Employee_Address)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Employee_Address)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Emp_Phone)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Emp_Phone)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Emp_Email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Emp_Email)
                            </dd>

                            @*<dt>
                                    @Html.DisplayNameFor(model => model.ID_Number)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ID_Number)
                                </dd>*@

                            <dt>
                                Image
                            </dt>

                            <dd>
                                <img src="@Url.Content(Model.ImageData)" width="250" height="250" multiple />
                            </dd>

                            <dt>
                                Hender
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Employee_Gender.Gender_Description)
                            </dd>

                            <dt>
                                Description
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Employee_Title.Title_Description)
                            </dd>


                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Confirm Delete" class="btn btn-default" /> 
                                @*@Html.ActionLink("Back to List", "Index")*@
                            </div>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
