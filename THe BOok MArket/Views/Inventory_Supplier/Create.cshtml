@model THe_BOok_MArket.Models.Inventory_Supplier

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout12.cshtml";
}


<body>
    <!--Page Header Title-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">New Inventory Supplier</h2>
        </div>
    </header>

    <!--Page Breadcrumb for Active Page navigation-->
    <div class="breadcrumb-holder container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
            <li class="breadcrumb-item active">Add New Supplier</li>
        </ul>
    </div>

    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-9">
                    <div class="card">

                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Inventory Supplier details</h3>
                        </div>

                        <div class="card-body">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.InvSupp_Name,"Supplier Name", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.InvSupp_Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.InvSupp_Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.InvSupp_Address, "Supplier Address", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.InvSupp_Address, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.InvSupp_Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.InvSupp_Email, "Email", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.InvSupp_Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.InvSupp_Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.InvSupp_Phone, "Phone No.", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.InvSupp_Phone, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.InvSupp_Phone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>