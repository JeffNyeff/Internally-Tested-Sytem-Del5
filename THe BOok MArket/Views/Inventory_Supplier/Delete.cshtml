@model THe_BOok_MArket.Models.Inventory_Supplier

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout12.cshtml";
}

<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Delete Inventory Supplier</h2>
    </div>
</header>

<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Delete Supplier</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Confirm Supplier deletion</h3>
                    </div>

                    <div class="card-body">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                   Name
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.InvSupp_Name)
                                </dd>

                                <dt>
                                    Physical Address
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.InvSupp_Address)
                                </dd>

                                <dt>
                                   Email
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.InvSupp_Email)
                                </dd>

                                <dt>
                                    Phone No.
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.InvSupp_Phone)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Confirm Delete" class="btn btn-default" /> 
                                </div>
                                                               
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
