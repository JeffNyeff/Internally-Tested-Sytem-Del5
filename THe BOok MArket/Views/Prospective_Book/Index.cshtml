@model IEnumerable<THe_BOok_MArket.Models.Prospective_Book>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layoutfluid.cshtml";
}

<h2>Index</h2>


<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Search Prospective Book</h2>
    </div>
</header>
<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Search for Prospective Books</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Propspective Books List</h3>
                    </div>

                    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@

                    <p>
                        @using (Html.BeginForm("Index", "Prospective_Book", FormMethod.Get))
                        {
                            <b>SearchBy:</b> @Html.RadioButton("searchBy", "Date", true) <text>Date</text>
                            @Html.RadioButton("searchBy", "Name") <text>Name</text>
                            @*@Html.RadioButton("searchBy", "Email") <text>Email</text>*@
                            <br />
                            @Html.TextBox("search") <input type="submit" value="Search" />
                        }

                    </p>
                    @*<p>
            @Html.ActionLink("View All Prospective Books", "Index")
        </p>*@
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <p>
                        @Html.ActionLink("Add Book?", "Index", "Books")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProsBook_Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Book_Supplier.BookSupplier_Name)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProsBook_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Book_Supplier.BookSupplier_Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ProsBook_ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ProsBook_ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ProsBook_ID })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</section>








